datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

generator client {
  provider = "prisma-client-js"
}

model Reminder {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  dueTime   DateTime
  notified  Boolean  @default(false)
  createdAt DateTime @default(now())
}
